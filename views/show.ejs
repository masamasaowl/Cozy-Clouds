<% layout("/layouts/boilerplate") %>

<body>

    <h2 class="poppins-semibold">
        Here is a detailed view of the listing
    </h2>

    <div class="container">
        <p>your id is : <%= listing._id %></p>
        <p><%= listing.title %></p>
        <p><%= listing.description %></p>

        <!-- for price  we use symbols -->
        <p>&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
        <p><%= listing.location %></p>
        <p><%= listing.country %></p>
    </div>

    <div class="editListing">
        <form class="" method="get" action="/listings/edit/<%= listing._id %>">

            <button type="submit" class=" poppins-regular">Edit listing</button>

        </form>
    </div>

    <div class="deleteListing">
        <form class="" method="post" action="/listings/delete/<%= listing._id %>?_method=DELETE">

            <button type="submit" class=" poppins-regular">Delete listing</button>

        </form>
    </div>

</body>
