<% layout("/layouts/boilerplate") %>

<body>
    <h2 class="poppins-semibold">
        It's okay, we all do mistakes sometimes
    </h2>


    <form class="createForm" method="post" action="/listings/<%= listing._id %>?_method=PUT">
        <input type="text" name="listing[title]" placeholder="Name of listing" value="<%= listing.title %>">

        <textarea type="text" name="listing[description]" placeholder="description"><%= listing.description %></textarea>

        <input type="number" name="listing[price]" placeholder="price in INR" value="<%= listing.price %>">

        <input type="text" name="listing[location]" placeholder="Location" value="<%= listing.location %>">

        <input type="text" name="listing[country]" placeholder="Country" value="<%= listing.country %>">

        <button type="submit" class="Createbtn">Update!</button>
    </form>

    

</body>
